<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryHoursActivity">
    <!-- category_hours_activity.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Date selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Start Date"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select End Date"
                android:textSize="8sp"
                android:textStyle="bold" /> <!-- Adjust the text size here -->

        </LinearLayout>

        <!-- Button to calculate and display category hours -->
        <Button
            android:id="@+id/buttonCalculateHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Hours"
            android:textSize="8sp"
            android:textStyle="bold" />

        <!-- RecyclerView to display category hours -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCategoryHours"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>